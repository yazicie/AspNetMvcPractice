@model Notes.Models.Notes

@{
  ViewBag.Title = "Not alın";
}

<h2>Not alın</h2>


@using (Html.BeginForm("Create", "Notes", new { UserId = Convert.ToInt32(ViewData["Id"]) }, FormMethod.Post, null))
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <h4>Notlar</h4>
    <hr />

    <div class="form-group">
      @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-primary btn-default" value="Onayla" />
        <input type="reset" class="btn btn-info" value="Geri Dön" onclick="location.href='@Url.Action("Index", "Notes",new { userId = Convert.ToInt32(ViewData["Id"]) })'" />
      </div>
    </div>
  </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
